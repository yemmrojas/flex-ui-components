      "style": {
        "padding": {
          "start": 16,
          "top": 32,
          "end": 16,
          "bottom": 32
        },
        "backgroundColor": "#1976D2",
        "width": "match_parent"
      },
      "children": [
        {
          "id": "hero_title",
          "type": "componentTextView",
          "text": "Welcome to FlexUI",
          "textStyle": "bold",
          "fontSize": 28,
          "color": "#FFFFFF",
          "style": {
            "padding": {
              "bottom": 8,
              "top": 16
            }
          }
        },
        {
          "id": "hero_subtitle",
          "type": "componentTextView",
          "text": "Build dynamic UIs from JSON",
          "textStyle": "normal",
          "fontSize": 16,
          "color": "#E3F2FD",
          "style": {
            "padding": {
              "bottom": 16
            }
          }
        }
      ]
    },
    {
      "id": "features_section",
      "type": "contentVertical",
      "arrangement": "top",
      "style": {
        "padding": {
          "start": 16,
          "top": 24,
          "end": 16,
          "bottom": 16
        }
      },
      "children": [
        {
          "id": "features_title",
          "type": "componentTextView",
          "text": "Key Features",
          "textStyle": "bold",
          "fontSize": 20,
          "color": "#212121",
          "style": {
            "padding": {
              "bottom": 16
            }
          }
