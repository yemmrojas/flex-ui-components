            {
              "id": "feature_2",
              "type": "contentHorizontal",
              "arrangement": "start",
              "style": {
                "padding": {
                  "start": 12,
                  "top": 12,
                  "end": 12,
                  "bottom": 12
                },
                "backgroundColor": "#FFFFFF",
                "borderRadius": 8,
                "elevation": 2
              },
              "children": [
                {
                  "id": "feature_2_icon",
                  "type": "componentTextView",
                  "text": "✓",
                  "textStyle": "bold",
                  "fontSize": 24,
                  "color": "#4CAF50",
                  "style": {
                    "padding": {
                      "end": 12
                    }
                  }
                },
                {
                  "id": "feature_2_text",
                  "type": "componentTextView",
                  "text": "Event handling system",
                  "fontSize": 16,
                  "color": "#424242"
                }
              ]
            },
            {
              "id": "spacer_2",
              "type": "componentTextView",
              "text": "",
              "style": {
                "height": "12dp"
