          "children": [
            {
              "id": "feature_1",
              "type": "contentHorizontal",
              "arrangement": "start",
              "style": {
                "padding": {
                  "start": 12,
                  "top": 12,
                  "end": 12,
                  "bottom": 12
                },
                "backgroundColor": "#FFFFFF",
                "borderRadius": 8
              },
              "children": [
                {
                  "id": "feature_1_icon",
                  "type": "componentTextView",
                  "text": "✓",
                  "textStyle": "bold",
                  "fontSize": 24,
                  "color": "#4CAF50",
                  "style": {
                    "padding": {
                      "end": 12
                    }
                  }
                },
                {
                  "id": "feature_1_text",
                  "type": "componentTextView",
                  "text": "Dynamic component rendering",
                  "fontSize": 16,
                  "color": "#424242"
