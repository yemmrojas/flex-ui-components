              "children": [
                {
                  "id": "feature_3_icon",
                  "type": "componentTextView",
                  "text": "✓",
                  "textStyle": "bold",
                  "fontSize": 24,
                  "color": "#4CAF50",
                  "style": {
                    "padding": {
                      "end": 12
                    }
                  }
                },
                {
                  "id": "feature_3_text",
                  "type": "componentTextView",
                  "text": "Flexible styling options",
                  "fontSize": 16,
                  "color": "#424242"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "demo_section",
      "type": "contentVertical",
      "arrangement": "top",
      "style": {
        "padding": {
          "start": 16,
          "top": 24,
          "end": 16,
          "bottom": 24
