            "padding": {
              "bottom": 16
            }
          }
        },
        {
          "id": "demo_input",
          "type": "componentInput",
          "label": "Your Name",
          "placeholder": "Enter your name",
          "inputStyle": "outlined",
          "style": {
            "padding": {
              "bottom": 16
            },
            "width": "match_parent"
          }
        },
        {
          "id": "demo_check",
          "type": "componentCheck",
          "label": "I agree to the terms",
          "checked": false,
          "style": {
            "padding": {
              "bottom": 16
            }
          }
        },
        {
          "id": "demo_button",
          "type": "componentButton",
          "text": "Get Started",
          "buttonStyle": "primary",
          "actionId": "get_started",
            "style": {
                "width": "match_parent"
            }
        }
      ]
    }
  ]
}
